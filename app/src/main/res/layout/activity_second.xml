<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lizhenquan.honestdictionary.view.activity.BaiduTranslateActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toorbar"
        app:theme="@style/ThemeOverlay.AppCompat.Light"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <Spinner
            android:id="@+id/sp_from"
            android:layout_marginLeft="60dp"
            android:entries="@array/languages_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:id="@+id/iv_change"
            android:src="@mipmap/change"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/sp_to"
            android:layout_marginRight="60dp"
            android:entries="@array/languages_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </android.support.v7.widget.Toolbar>
    <EditText
        android:id="@+id/et_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="点击搜索"
        android:layout_width="match_parent"
        android:id="@+id/btn_search"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_result"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:text="源语言:"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_result2"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:text="翻译："
        android:layout_height="wrap_content"/>
</LinearLayout>
